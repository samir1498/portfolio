---
import { useTranslations } from '../i18n/translator';

const t = useTranslations(Astro.url);
---

<section id="education" class="py-16 bg-background">
    <h2 class="text-4xl font-bold text-center mb-12">{t('nav.education')}</h2>
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-muted p-6 rounded-lg">
                <h3 class="text-2xl font-bold">{t('education.master.title')}</h3>
                <p class="text-primary">{t('education.master.university')}</p>
                <p class="text-sm">{t('education.master.date')}</p>
                <p class="mt-4">{t('education.master.description')}</p>
            </div>
            <div class="bg-muted p-6 rounded-lg">
                <h3 class="text-2xl font-bold">{t('education.bachelor.title')}</h3>
                <p class="text-primary">{t('education.bachelor.university')}</p>
                <p class="text-sm">{t('education.bachelor.date')}</p>
                <p class="mt-4">{t('education.bachelor.description')}</p>
            </div>
        </div>
    </div>
</section>
