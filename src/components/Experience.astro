---
import { useTranslations } from '../i18n/translator';

const t = useTranslations(Astro.url);
---

<section id="experience" class="py-16">
    <h2 class="text-4xl font-bold text-center mb-12">{t('nav.experience')}</h2>
    <div class="relative container mx-auto px-6 flex flex-col space-y-8">
        <div class="absolute z-0 w-2 h-full bg-white shadow-md inset-0 left-17/32"></div>
        <!-- Experience Item -->
        <div class="relative z-10">
            <div class="timeline-container">
                <div class="timeline-pointer" aria-hidden="true"></div>
                <div class="bg-background p-6 rounded-lg shadow-soft">
                    <span class="font-bold text-primary text-sm tracking-wide">Feb 2024 - Jan 2025</span>
                    <h3 class="text-2xl font-bold pt-1">Omnivya - {t('experience.omnivya1.title')}</h3>
                    <p class="pt-2">{t('experience.omnivya1.description')}</p>
                </div>
            </div>
        </div>
        <!-- Experience Item -->
        <div class="relative z-10">
            <div class="timeline-container-left">
                <div class="timeline-pointer-left" aria-hidden="true"></div>
                <div class="bg-background p-6 rounded-lg shadow-soft">
                    <span class="font-bold text-primary text-sm tracking-wide">Jan 2025 - Present</span>
                    <h3 class="text-2xl font-bold pt-1">Omnivya - {t('experience.omnivya2.title')}</h3>
                    <p class="pt-2">{t('experience.omnivya2.description')}</p>
                </div>
            </div>
        </div>
    </div>
</section>

