---
import { useTranslations } from '../i18n/translator';

const t = useTranslations(Astro.url);
---

<section id="experience" class="py-16 bg-background">
  <h2 class="text-4xl font-bold text-center mb-12">{t('nav.experience')}</h2>
  <div class="relative container mx-auto px-6">
    <!-- Vertical Line -->
    <div class="absolute left-1/2 top-0 bottom-0 w-1 bg-primary/20 z-0 transform -translate-x-1/2"></div>

    <!-- Timeline Items Wrapper -->
    <div class="space-y-12">
      <!-- Right Side Item -->
      <div class="grid grid-cols-9 items-center">
        <div class="col-span-4"></div>
        <div class="col-span-1 flex justify-center relative z-10">
          <div class="w-4 h-4 bg-primary rounded-full shadow"></div>
        </div>
        <div class="col-span-4 bg-background p-6 rounded-lg shadow-soft z-10">
          <span class="font-bold text-primary text-sm tracking-wide">Feb 2024 - Jan 2025</span>
          <h3 class="text-2xl font-bold pt-1">Omnivya - {t('experience.omnivya1.title')}</h3>
          <p class="pt-2">{t('experience.omnivya1.description')}</p>
        </div>
      </div>

      <!-- Left Side Item -->
      <div class="grid grid-cols-9 items-center">
        <div class="col-span-4 bg-background p-6 rounded-lg shadow-soft text-right z-10">
          <span class="font-bold text-primary text-sm tracking-wide">Jan 2025 - Present</span>
          <h3 class="text-2xl font-bold pt-1">Omnivya - {t('experience.omnivya2.title')}</h3>
          <p class="pt-2">{t('experience.omnivya2.description')}</p>
        </div>
        <div class="col-span-1 flex justify-center relative z-10">
          <div class="w-4 h-4 bg-primary rounded-full shadow"></div>
        </div>
        <div class="col-span-4"></div>
      </div>
    </div>
  </div>
</section>


