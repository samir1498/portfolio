---
import { useTranslations } from '../i18n/translator';
import { Mail, Phone, Github, Linkedin } from 'lucide-react';
const t = useTranslations(Astro.url);
---

<section
  id="contact"
  class="py-section bg-background text-text font-body"
>
  <div class="container mx-auto px-6 max-w-2xl text-center space-y-8">
    <h2 class="text-4xl font-display font-bold">{t('nav.contact')}</h2>
    <p class="text-lg text-muted">{t('contact.description')}</p>

    <div class="space-y-4 text-base">
      <p class="flex items-center justify-center gap-2">
        <Mail className="w-5 h-5" />
        <a href="mailto:Bettahar.Samir@outlook.com" class="text-primary hover:underline">
          Bettahar.Samir@outlook.com
        </a>
      </p>
      <p class="flex items-center justify-center gap-2">
        <Phone className="w-5 h-5" />
        <a href="tel:+213662105385" class="text-primary hover:underline">
          +213 662 10 53 85
        </a>
      </p>
      <div class="flex justify-center gap-6 text-xl mt-6">
        <a
          href="https://github.com/samir1498"
          class="hover:text-primary transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Github className="w-6 h-6" />
        </a>
        <a
          href="https://linkedin.com/in/samir-bettahar"
          class="hover:text-primary transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Linkedin className="w-6 h-6" />
        </a>
      </div>
    </div>
  </div>
</section>
